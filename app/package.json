{
  "private": true,
  "name": "nft-marketplace",
  "description": "A web3 enabled NFT marketplace",
  "version": "0.0.1",
  "author": "Queendom PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/QueendomDAO/nft-marketplace"
  },
  "contributors": [
    {
      "name": "Warren Gates",
      "email": "warrencgates@devmoi.com",
      "url": "https://github.com/Moikapy"
    },
    {
      "name": "Phillip Strefling",
      "email": "phillip@queendom.io",
      "url": "https://github.com/circlenaut/"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna link && lerna bootstrap",
    "build": "lerna run build --scope web --scope '{@oyster/commonlocal,@stripe/checkout}'",
    "start:prod": "cd packages/web && yarn run start:prod",
    "start": "cross-env CI=true lerna run start --scope '{@oyster/commonlocal,@stripe/checkout}' --stream --parallel --scope web",
    "lint": "prettier -c 'packages/*/{src,test}/**/*.ts' && npm run lint:eslint",
    "lint:web": "prettier -c 'packages/{common,web}/{src,test}/**/*.{ts,tsx}' && npm run lint:eslint:web",
    "lint:eslint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
    "lint:eslint:web": "eslint 'packages/{common,web}/{src,test}/**/*.{ts,tsx}'",
    "lint:fix": "prettier --write 'packages/*/{src,test}/**/*.{ts,tsx}' && eslint --fix 'packages/*/{src,test}/**/*.ts'",
    "format:fix": "lerna run format:fix",
    "deploy": "run-s deploy:docs build deploy:apps && gh-pages -d docs",
    "deploy:test": "run-s deploy:docs build deploy:apps",
    "deploy:docs": "lerna run docs",
    "deploy:apps": "lerna run deploy:app",
    "test": "lerna run test --concurrency 1 --stream"
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --cache --fix --max-warnings=0"
    ]
  },
  "resolutions": {
    "@types/react": "^17.0.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.1",
    "bootstrap": "^5.1.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "imgbb": "^1.0.48",
    "memory-cache": "^0.2.0",
    "morgan": "^1.10.0",
    "next": "^11.0.1",
    "next-session": "^4.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reactjs-popup": "^2.0.5",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/animejs": "^3.1.3",
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.25.1",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "26.6.0",
    "jest-config": "24.9.0",
    "lerna": "3.22.1",
    "lint-staged": "^10.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.3"
  }
}
