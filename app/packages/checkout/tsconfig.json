{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",

    "outDir": "./dist/lib",
    "rootDir": "./src",

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["types", "../../types", "../../node_modules/@types"],

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
  },
  "files": ["src/data/products.json"],
  "include": [
    "src/**/*",
    "src/next-env.d.ts",
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": ["**/node_modules"]
}
